<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:layout_height="@dimen/padding_50dp"
    android:paddingLeft="@dimen/padding_15dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addup"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/addUpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_F62C2A"
            android:textSize="15sp"
            />

    <TextView
        android:id="@+id/originalPriceTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:textColor="@color/gray_text"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sureTextView"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="@color/color_F62C2A"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

</LinearLayout>