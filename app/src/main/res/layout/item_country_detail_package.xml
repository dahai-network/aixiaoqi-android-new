<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_10dp"
        android:background="@color/colorf_F5F5F5"
        android:paddingTop="10dp"/>

    <RelativeLayout
        android:id="@+id/rootLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_100dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@drawable/call_phone_selector"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_10dp">


        <ImageView
            android:id="@+id/numberTextView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/packageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:layout_marginTop="@dimen/padding_2dp"
            android:layout_toRightOf="@id/numberTextView"
            android:text="美国一日游"
            android:textColor="@color/color_333333"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/flowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packageNameTextView"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:layout_marginTop="@dimen/padding_2dp"
            android:layout_toRightOf="@id/numberTextView"
            android:text="不限流量"
            android:textColor="@color/color_BFBFBF"/>

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flowTextView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:layout_marginTop="@dimen/padding_5dp"
            android:layout_toRightOf="@+id/numberTextView"
            android:text="$30.00"
            android:textColor="@color/color_f62a2a"
            android:textSize="22.5sp"/>

        <TextView
            android:id="@+id/originalPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:layout_toRightOf="@id/priceTextView"
            android:layout_alignBaseline="@id/priceTextView"
            android:textColor="@color/color_BFBFBF"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:layout_marginRight="@dimen/padding_15dp"
            android:background="@drawable/arrow"/>
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_10dp"
        android:layout_below="@+id/rootLinearLayout"
        android:background="@color/colorf_F5F5F5"
        android:paddingTop="10dp"
        android:visibility="gone"/>
</RelativeLayout>